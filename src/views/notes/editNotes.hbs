<div class="col-md-4 mx-auto mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note.id}}" method='POST'>
                <div class="form-group">
                    <input value="{{note.title}}" type="text" name="title" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" rows="10">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>