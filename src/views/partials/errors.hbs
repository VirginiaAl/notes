{{!-- error from passport --}}
{{#if error}}
<div class="alert alert-dismissible alert-danger mt-4">
    <h3 class="text-center">{{error}}</h3>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
{{/if}}

{{!-- errors from Signup array --}}
{{#each errors}}
    <div class="alert alert-dismissible alert-danger mt-4">
        <h3 class="text-center">{{text}}</h3>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{{/each}}